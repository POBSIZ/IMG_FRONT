{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "Actions": [
        "./src/redux/actions/index.ts"
      ],
      "Actions/*": [
        "./src/redux/actions/*"
      ],
      "Types/*": [
        "./src/redux/types/*"
      ],
      "Bases": [
        "./src/components/base/index.ts"
      ],
      "Bases/*": [
        "./src/components/base/*"
      ],
      "Templates": [
        "./src/components/templates/index.tsx"
      ],
      "Templates/*": [
        "./src/components/templates/*"
      ],
      "UIpages": [
        "./src/components/pages/index.ts"
      ],
      "UIpages/*": [
        "./src/components/pages/*"
      ],
      "Atoms": [
        "./src/components/UI/atoms/index.ts"
      ],
      "Atoms/*": [
        "./src/components/UI/atoms/*"
      ],
      "Molecules": [
        "./src/components/UI/molecules/index.ts"
      ],
      "Molecules/*": [
        "./src/components/UI/molecules/*"
      ],
      "Organisms": [
        "./src/components/UI/organisms/index.ts"
      ],
      "Organisms/*": [
        "./src/components/UI/organisms/*"
      ],
      "Hoc": [
        "src/components/HOC/index.ts"
      ],
      "Hoc/*": [
        "./src/components/HOC/*"
      ],
      "Utils": [
        "./src/utils/index.ts"
      ],
      "Utils/*": [
        "./src/utils/*"
      ],
      "StyleVars": [
        "styles/global.styles.tsx"
      ],
      "StoriesLayout": [
        "./src/components/stories/storiesLayout/index.tsx"
      ],
      "Hooks": [
        "./src/hooks/index.ts"
      ],
      "Layouts": [
        "./src/components/layout/index.ts"
      ],
      "Types": [
        "./src/types/index.ts"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "noEmit": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noResolve": false,
    "removeComments": false,
    "sourceMap": true,
    "keyofStringsOnly": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/UI/atoms/button/button.stories"
  ],
  "exclude": [
    "node_modules",
    "next.config.js",
    "/.storybook/main.ts",
    "/.storybook/"
  ],
  "typeRoots": [
    "node_modules/@types",
    // "./node_modules/@types",
    "src/@type",
    "src/types",
    "./src/types/index.d.ts"
  ]
}
